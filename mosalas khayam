#include <iostream>
#include <iomanip>
using namespace std;
 

int main()
{
    int n,m;
    cout<<"adad mored naza:";
    cin>>n;
     m=n-1;
    for(int i=1;i<=n;i++)
    {
        for(int j=i;j<=n-1+m;j++)
        {
            cout<<" ";
        }
        for(int k=1;k<=i;k++)
        {
          
            cout<<k<<" ";
        }
        for(int k=i-1;k>=1;k--)
        {
            cout<<k<<" ";
        }
        
        m--;
    cout<<endl;
    }
    return 0;
}
